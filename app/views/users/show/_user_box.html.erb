<nav class="group user-image-box sidebar left" id="user-show-sidebar">

  <div><%= link_to image_tag(@user.avatar.url(:medium), class: "user-image-medium centered", id: "user-image"), @user, method: :get %></div>

  <h3 class="dark-gray centered" id="user-show-username"><%= "#{@user.first_name} " %><%= "#{@user.last_name}" %></h3>
<div>
<h3 class="dark-gray centered" id="user-show-username"><b>Description:</b><%= "#{@user.description}" %> </h3>
<% @comment.each do |comment| %>

<% if !comment.user_id.nil? && @user.id == comment.user_id %> 
<h3 class="dark-gray centered" id="user-show-username">
	<b>Comment:</b><%= comment.comment %>
	From: <% @test = User.find_by_id(comment.sender_id) %> <%= @test.full_name %>
</h3>
<% end %>

<% end %>
</div>
</nav>