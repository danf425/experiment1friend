<%= conversation.subject %>
<h1><%= link_to "Reply", {:controller => "messages", :action => "reply", :id => conversation.id}, :title => "Reply" %></h1>
<table class="table table-striped">
  <tbody>
  <% @conversations.each do |conversation| %>
  <% @message = conversation.messages %>
  <% @message.each do |m| %>
      <% conversation.mark_as_read(current_user) %>

      <tr>
        <% if m.sender != current_user %>
            <td><%= link_to m.sender.full_name, m.sender %></td>
        <% else %>
            <td>Me</td>
        <% end %>

        <td> <%= m.body %> </td>
          <td><%= m.updated_at.strftime("%a, %m/%e/%Y %I:%M %p") %></td>
          <td> <%= link_to "Move to Trash", {:controller => "conversations", :action => "trash", :id => conversation.id}, :title => "Move to Trash", :method => 'post' %></td>

      </tr>
  <% end %>
  <% end %>

  </tbody>
</table>