    <% booking = booking_space %>
<% statuses = Booking.approval_statuses %>
  <% booking_status = booking.approval_status %>
<tr class="list-item">
  <td>
   <% Space.all.each do |space| %>
   <% if logged_in? && current_user == booking_space.space.owner %>  
   <% if booking_status == statuses[:approved] %>
   <%= button_to "Cancel", cancel_by_owner_booking_url(booking.id), method: :put %>
   <% elsif booking_status == statuses[:pending] %>
   <%= button_to "Approve", approve_booking_url(booking.id), method: :put %>
   <%= button_to "Decline", decline_booking_url(booking.id), method: :put %>
   <% else %>
   <h3>development placeholder</h3>
   <p>Status: <%= statuses[booking_status] %></p>
   <% end %>
   <% end %>
   <% end %>
    <%= statuses[booking_space.approval_status] %>
  </td>
  <td>
    <%= link_to "#{booking_space.space.title}, #{booking_space.space.city}",
                booking_space.space, method: :get %>
  </td>
  <td>
    <%= link_to "#{booking_space.space.owner.first_name} #{booking_space.space.owner.last_name}",
                booking_space.space.owner, method: :get %>
  </td>
  <td>
    <%= "#{booking_space.start_date} - #{booking_space.end_date}" %>
  </td>
  <td>
    <%= link_to "Itinerary", booking_url(booking_space.id), method: :get %>
  </td>
  <td>
    <%= button_to "Cancel",
                   cancel_by_user_booking_url(booking_space.id),
                   class: "button blue input-small",
                  method: :put %>
  </td>
</tr>